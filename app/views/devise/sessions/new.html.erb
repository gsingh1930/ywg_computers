<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card">
      <div class="card-header bg-dark text-white">
        <h4 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> Log In</h4>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control', required: true, autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, class: 'form-control', required: true %>
          </div>

          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>

          <div class="d-grid">
            <%= f.submit "Log In", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>

        <hr>
        <p class="text-center mb-0">
          Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
        </p>
      </div>
    </div>
  </div>
</div>