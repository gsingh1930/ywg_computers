<h1 class="mb-4">All Products</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="text-muted"><%= product.category.name %></p>
          <p class="card-text"><%= truncate(product.description, length: 80) %></p>
          <p class="h5 text-success">$<%= number_with_precision(product.unit_price, precision: 2) %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'View Details', product_path(product), class: 'btn btn-primary w-100' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @products %>
</div>