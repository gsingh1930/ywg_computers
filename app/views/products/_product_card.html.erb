<div class="col-md-4 mb-4">
  <div class="card h-100">
    <% if product.image.attached? %>
      <%= image_tag product.image.variant(resize_to_fill: [400, 300]), class: 'card-img-top', style: 'height: 200px; object-fit: cover;' %>
    <% else %>
      <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
        <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
      </div>
    <% end %>
    <div class="card-body">
      <% if product.on_sale? %>
        <span class="badge bg-danger mb-2">On Sale!</span>
      <% end %>
      <% if product.created_at >= 3.days.ago %>
        <span class="badge bg-success mb-2">New!</span>
      <% end %>
      <% product.tags.each do |tag| %>
        <span class="badge bg-info mb-2"><%= tag.name %></span>
      <% end %>
      <h5 class="card-title"><%= product.name %></h5>
      <p class="text-muted"><%= product.category.name %></p>
      <p class="card-text"><%= truncate(product.description, length: 80) %></p>
      <p class="h5 text-success">$<%= number_with_precision(product.unit_price, precision: 2) %></p>
    </div>
    <div class="card-footer">
      <%= link_to 'View Details', product_path(product), class: 'btn btn-primary w-100' %>
    </div>
  </div>
</div>