<div class="col-md-4 mb-4">
  <div class="card h-100">
    <div class="card-body">
      <% if product.on_sale? %>
        <span class="badge bg-danger mb-2">On Sale!</span>
      <% end %>
      <% if product.created_at >= 3.days.ago %>
        <span class="badge bg-success mb-2">New!</span>
      <% end %>
      <h5 class="card-title"><%= product.name %></h5>
      <p class="text-muted"><%= product.category.name %></p>
      <p class="card-text"><%= truncate(product.description, length: 80) %></p>
      <p class="h5 text-success">$<%= number_with_precision(product.unit_price, precision: 2) %></p>
    </div>
    <div class="card-footer">
      <%= link_to 'View Details', product_path(product), class: 'btn btn-primary w-100' %>
    </div>
  </div>
</div>